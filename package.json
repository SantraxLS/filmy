{
  "name": "filmy",
  "version": "1.0.0",
  "description": "An API Project for Ingegneria del Software 2",
  "homepage": "https://github.com/carlocorradini/filmy",
  "bugs": {
    "url": "https://github.com/carlocorradini/filmy/issues",
    "email": "carlo.corradini@studenti.unitn.it"
  },
  "main": "./app.js",
  "private": true,
  "scripts": {
    "clean": "npx rimraf ./build/ && npx rimraf ./log/",
    "update": "npx ncu",
    "update:install": "npx ncu -u && npm install",
    "prettify": "npx prettier --write ./src/**/*.ts",
    "prettify:staged": "npx prettier --write",
    "lint": "npx eslint --fix ./src/**/*.ts",
    "lint:staged": "npx eslint --fix",
    "prebuild": "npm run clean",
    "build": "npx tsc --p ./tsconfig.json",
    "postbuild": "npx ts-node ./tools/build",
    "test": "npx jest",
    "test:staged": "npx jest --bail --findRelatedTests",
    "prestart": "cd build && npm install --production",
    "start": "node ./build/app.js",
    "start:dev": "npx nodemon"
  },
  "author": "Carlo Corradini",
  "contributors": [
    "Grigore Andronic",
    "Ayoub Saghir",
    "Luca Santoro",
    "Miraxh Tereziu"
  ],
  "engines": {
    "node": "^10.16.0",
    "npm": "^6.9.0",
    "yarn": "^1.19.1"
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.0",
    "pg": "^7.14.0",
    "reflect-metadata": "^0.1.13",
    "serve-favicon": "^2.5.0",
    "typeorm": "^0.2.20",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^12.12.11",
    "@types/serve-favicon": "^2.2.31",
    "@types/shelljs": "^0.8.6",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.0",
    "npm-check-updates": "^3.2.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  }
}
