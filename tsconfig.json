{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": false,
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        },
        "declaration": false,
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules",
        "./test",
        "./**/*.spec.ts",
        "./**/*.test.ts"
    ]
}