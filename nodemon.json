{
  "restartable": "rs",
  "colours": true,
  "verbose": true,
  "ext": "ts",
  "exec": "./node_modules/.bin/ts-node ./src/app.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "watch": [
    "./src/*",
    ".env"
  ],
  "ignore": [
    "./node_modules/**/node_modules",
    "*.test.js",
    "*.test.ts",
    ".git"
  ]
}